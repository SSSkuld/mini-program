/* miniprogram/pages/comment/index.wxss */
.container{
  margin-bottom: 70rpx;
}
.comment-view{
  position: fixed;
  width: 100%;
  display: flex;
}

.comment-input{
  display: flex;
  border: solid 1rpx lightgrey;
  width: 600rpx;
  height: 60rpx;
  border-radius: 30rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  font-size: 30rpx;
}

.comment-btn{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  width: 18%;
  align-content: center;
  text-align: center;
  color: #007aff;
  font-size: 30rpx;
}

.comment-btn-1{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  width: 18%;
  align-content: center;
  text-align: center;
  color: pink;
}

.first-avatar-view{
  width: 100rpx;
  height: 150rpx;
  background-color: aliceblue;
}

.comment-container{
  display: flex;
  flex-direction: column;
}

.first-comment{
  width: 750rpx;
  height: 150rpx;
  position: relative;
  border-bottom: solid 2rpx rgba(211, 211, 211, 0.384);
}

.second-comment{
  width: 100%;
  height: 150rpx;
  position: relative;
}

.second-comment-text{
  width: 70%;
  position: absolute;
  left: 180rpx;
  top: 20rpx;
  height: 130rpx;
  font-size: 30rpx;
  border-bottom: solid 2rpx rgba(211, 211, 211, 0.384);
}

.second-comment-avatar{
  position: absolute;
  top: 20rpx;
  left: 110rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  
}

.first-avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}

.first-text{
  position: absolute;
  width: 600rpx;
  top: 20rpx;
  left: 110rpx;
  font-size: 30rpx;
}

.first-reply{
  position: absolute;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  align-content: center;
  color: lightgrey;
  bottom: 10rpx;
  left: 200rpx;
  font-size: 30rpx;
  
}
